<main style="text-align: center; padding: 20px; font-family: Arial, sans-serif; color: #fff;">
    <% if (cartItems.length > 0) { %>
      <h2 style="font-size: 24px; color:black; margin-bottom: 20px;">Your Cart Items</h2>
      <ul style="list-style: none; padding: 0; margin: 0; display: inline-block; text-align: left;">
        <% cartItems.forEach(item => { %>
          <li style="display: flex; align-items: center; margin-bottom: 15px; background-color: #444; border-radius: 8px; padding: 10px; box-shadow: 0px 2px 8px rgba(0, 0, 0, 0.2);">
            <% if (item.image && item.image.length > 0) { %>
              <img src="/uploads/<%= item.image[0] %>" alt="Product Picture" 
                   style="width: 70px; height: 70px; border-radius: 5px; margin-right: 15px; ">
            <% } else { %>
              <div style="width: 70px; height: 70px; background-color: #666; display: flex; align-items: center; justify-content: center; border-radius: 5px; margin-right: 15px; color: #ccc;">
                No Picture
              </div>
            <% } %>
            <div>
              <p style="margin: 0; font-size: 16px; color: yellow; font-weight: bold;"><%= item.name %></p>
              <p style="margin: 0; font-size: 14px; color: #fff;">$<%= item.price %></p>
            </div>
          </li>
        <% }) %>
      </ul>
    <% } else { %>
      <p style="font-size: 18px; color: yellow;">Your cart is currently empty.</p>
      <a href="/products" style="text-decoration: none; background-color: yellow; color: #333; padding: 10px 20px; border-radius: 5px; font-size: 16px; margin-top: 20px; display: inline-block;">Go Shopping</a>
    <% } %>
  </main>
  