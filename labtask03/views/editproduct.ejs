
    <div class="form-container">
        <h1>Update Product</h1>
        <form action="/admin/productsA/edit" method="POST" enctype="multipart/form-data">
            <!-- Product ID -->
            <label for="productId">Product ID:</label>
            <input type="text" id="productId" name="productId" placeholder="Enter product ID" required>

            <!-- Product Name -->
            <label for="productName">Product Name:</label>
            <input type="text" id="productName" name="productName" placeholder="Enter new product name">

            <!-- Product Image -->
            <label for="productImage">Product Image:</label>
            <input type="file" id="productImage" name="productImage" accept="image/*">

            <!-- Product Price -->
            <label for="productPrice">Product Price:</label>
            <input type="number" step="0.01" id="productPrice" name="productPrice" placeholder="Enter new product price">

            <!-- Submit Button -->
            <button type="submit">Update Product</button>
        </form>
    </div>

