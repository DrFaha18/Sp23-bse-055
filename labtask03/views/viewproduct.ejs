<div class="form-container">
    <h1>All Products</h1>
  
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Image</th>
          <th>Name</th>
          <th>Price</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (products && products.length > 0) { %>
          <% products.forEach(product => { %>
            <tr>
              <td><%= product._id %></td>
              <td>
                <img src="/uploads/<%= product.image %>" alt="<%= product.name %>" style="width: 50px; height: 50px;">
              </td>
              <td><%= product.name %></td>
              <td><%= product.price %></td>
              <td>
                <!-- <a href="/admin/productsA/edit/<%= product._id %>">Edit</a> -->
                <form action="/admin/productsA/delete/<%= product._id %>" method="POST" style="display: inline;">
                  <button type="submit">Delete</button>
                </form>
                <form action="/admin/productsA/edit/<%= product._id %>" method="POST" style="display: inline;">
                    <button type="submit">Edit</button>
                  </form>
              </td>
            </tr>
          <% }); %>
        <% } else { %>
          <tr>
            <td colspan="5">No products found.</td>
          </tr>
        <% } %>
      </tbody>
    </table>

    <% if (totalPages > 1) { %>
        <div style="text-align: center; margin-top: 20px;">
          <ul style="display: inline-block; padding-left: 0; margin-bottom: 0; list-style: none;">
            <li style="display: inline; margin: 0 5px;">
              <a href="?page=1" 
                 style="display: inline-block; padding: 8px 16px; font-size: 16px; color: black; text-decoration: none; border: 1px solid #ddd; border-radius: 4px; background-color: #fff; transition: background-color 0.3s, color 0.3s;">
                 First
              </a>
            </li>
            <% for (let page = 1; page <= totalPages; page++) { %>
              <li style="display: inline; margin: 0 5px;">
                <a href="?page=<%= page %>" 
                   style="display: inline-block; padding: 8px 16px; font-size: 16px; color:black; text-decoration: none; border: 1px solid #ddd; border-radius: 4px; background-color: #fff; transition: background-color 0.3s, color 0.3s;">
                   <%= page %>
                </a>
              </li>
            <% } %>
            <li style="display: inline; margin: 0 5px;">
              <a href="?page=<%= totalPages %>" 
                 style="display: inline-block; padding: 8px 16px; font-size: 16px; color: black; text-decoration: none; border: 1px solid #ddd; border-radius: 4px; background-color: #fff; transition: background-color 0.3s, color 0.3s;">
                 Last
              </a>
            </li>
          </ul>
        </div>
      <% } %>
      

</div>
