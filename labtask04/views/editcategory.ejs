
    <div class="form-container">
        <h1>Edit Category</h1>
        <form action="/category/edit" method="POST">
            <!-- Category Name -->
            <label for="categoryName">Category Name (Current):</label>
            <input type="text" id="categoryName" name="categoryName" placeholder="Enter existing category name" required>

            <!-- New Category Name -->
            <label for="newCategoryName">New Category Name:</label>
            <input type="text" id="newCategoryName" name="newCategoryName" placeholder="Enter new category name" required>

            <!-- Submit Button -->
            <button type="submit">Edit Category</button>
        </form>
    </div>
